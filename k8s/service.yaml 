apiVersion: v1
kind: Service
metadata:
  name: mcp-hub-service
  namespace: default
  labels:
    app: mcp-hub
spec:
  type: NodePort
  selector:
    app: mcp-hub
  ports:
  - name: http
    protocol: TCP
    port: 8000        # Internal cluster port
    targetPort: 8000  # Container port
    nodePort: 30800   # External access port
  sessionAffinity: None
